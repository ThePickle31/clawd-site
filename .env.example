# Convex
NEXT_PUBLIC_CONVEX_URL=

# Discord webhook for contact form notifications
# Format: https://discord.com/api/webhooks/{webhook_id}/{webhook_token}
DISCORD_WEBHOOK_URL=

# Discord Application (for button interactions)
# Get these from Discord Developer Portal: https://discord.com/developers/applications
DISCORD_APP_ID=
DISCORD_PUBLIC_KEY=
DISCORD_BOT_TOKEN=

# Gmail OAuth2 for sending replies
# Get these from Google Cloud Console: https://console.cloud.google.com/
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_USER=

# Admin password for /admin page
ADMIN_PASSWORD=

# API secret for manual reply endpoint (use `openssl rand -hex 32` to generate)
SEND_REPLY_SECRET=

# Redis URL for status API (optional)
REDIS_URL=
