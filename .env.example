# Database
DATABASE_URL=/data/contact.db

# Discord webhook for contact form notifications
# Format: https://discord.com/api/webhooks/{webhook_id}/{webhook_token}
DISCORD_WEBHOOK_URL=

# Gmail OAuth2 for sending replies
# Get these from Google Cloud Console: https://console.cloud.google.com/
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_USER=

# Admin password for /admin page
ADMIN_PASSWORD=

# Redis URL for status API (optional)
REDIS_URL=
